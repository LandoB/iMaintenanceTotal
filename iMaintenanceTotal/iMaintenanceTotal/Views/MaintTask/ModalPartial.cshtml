@model iMaintenanceTotal.Models.MaintTask

            <div class="modal-header">
                <button type="button" class="close modal-close-top" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
                Edit Reminder
            </div>

            @using (Ajax.BeginForm("Edit", "MaintTask", FormMethod.Post,
                    new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                        UpdateTargetId = "editor-success-" + @Model.MaintTaskId,
                        OnSuccess = "success",
                        OnFailure = "failure",
                    }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaintTaskId)
                                        <div class="modal-body">
                                            <div class="">
                                                <div class="form-group">
                                                    <div class="col-lg-4 control-label">Title:</div>
                                                    <div class="col-lg-8 field-control">@Html.TextBoxFor(model => model.Title)</div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-4 control-label">Complete By:</div>
                                                    <div class="col-lg-8 field-control">@Html.TextBoxFor(model => model.CompleteBy, null, new { @placeholder = "mm/dd/yyyy" })</div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-4 control-label">Repeat:</div>
                                                    <div class="col-lg-8 field-control">@Html.TextBoxFor(model => model.Frequency)</div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-4 control-label">Category:</div>
                                                    <div class="col-lg-8 field-control">@Html.TextBoxFor(model => model.Category)</div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-4 control-label">Notes:</div>
                                                    <div class="col-lg-8 field-control">@Html.TextAreaFor(model => model.Notes)</div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-4 control-label">Remind Me On:</div>
                                                    <div class="col-lg-8 field-control">@Html.TextBoxFor(model => model.RemindMeOn, null, new { @placeholder = "mm/dd/yyyy" })</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-success">Save</button>
                                        </div>

            }
