@using Microsoft.AspNet.Identity;

@model IEnumerable<iMaintenanceTotal.Models.MaintTask>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron text-center">

    <br><br>
    <div class="container-fluid main-div">
        <div class="col-md-12">
            <div class="row div-background">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="row ">
                        <div class="user-profile">
                            <h1>Welcome <b>@ViewBag.DisplayName</b>!</h1><br><br>
                            <div class="panel panel-primary">
                                <div class="panel-heading">These are your current reminders:</div>
                                    <div class="panel-body">
                                        <div>
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Task</th>
                                                        <th>Category</th>
                                                        <th>Created At</th>
                                                        <th>Complete By</th>
                                                        <th>Frequency</th>
                                                        <th>Remind Me By</th>
                                                        <th>Notes</th>
                                                        <th>Completed</th>
                                                        <th>Edit</th>
                                                        <th>Delete</th>
                                                    </tr>
                                                </thead>
                                                
                                                <tbody class="row">
                                                    @foreach (var item in Model)
                                                    { 
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Category)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.CompleteBy)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Frequency)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.RemindMeBy)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Completed)</td>
                                                            <!-- <td>@Html.ActionLink("Edit", "Edit", new { id = item.MaintTaskId })</td> -->
                                                            <td>
                                                                @Html.ActionLink(linkText: " ",
                                                                            actionName: "index",
                                                                            routeValues: null,
                                                                            htmlAttributes: new { id = item.MaintTaskId, @class = "btn btn-primary btn-sm glyphicon glyphicon-pencil" })
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink(linkText: " ",
                                                                            actionName: "index",
                                                                            routeValues: null,
                                                                            htmlAttributes: new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove" })
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div>
                                            <button class="btn btn-primary" data-toggle="modal" data-target="#maint-task-modal">Add New Reminder</button>
                                        </div>
                                    </div>
                            </div> <!-- END of Panel -->
                        </div>
                        <div id="maint-task-modal" role="dialog" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @using (Html.BeginForm("CreateMaintTask", "MaintTask", FormMethod.Post, new { id = "maint-task-form", @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("mt-id", ViewBag.MaintTaskId as object)
                                        <div class="modal-header">
                                            <button type="button" class="close modal-close-top" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                            Add New Remider
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Title:</div>
                                                <div class="col-lg-8 field-control">@Html.TextBox("mt-title")</div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Complete By:</div>
                                                <div class="col-lg-8 field-control">@Html.TextBox("mt-complete-by", null, new { @placeholder = "mm/dd/yyyy" })</div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Frequency:</div>
                                                <div class="col-lg-8 field-control">@Html.TextBox("mt-frequency")</div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Category:</div>
                                                <div class="col-lg-8 field-control">@Html.TextBox("mt-category")</div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Notes:</div>
                                                <div class="col-lg-8 field-control">@Html.TextArea("mt-notes")</div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Remind Me On:</div>
                                                <div class="col-lg-8 field-control">@Html.TextBox("mt-remind-me-on", null, new { @placeholder = "mm/dd/yyyy" })</div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-4 control-label">Remind My By:</div>
                                                <div class="col-lg-8 field-control">@Html.TextBox("mt-remind-me-by")</div>
                                            </div>
                                            
                                        </div>
                                        <div class="modal-footer"><input class="btn btn-default" type="submit" value="Submit" /></div>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- END of User Profile -->
                    </div>
                </div> <!-- END of col-md-10 -->
                <div class="col-md-1"></div>
            </div>
        </div>
    </div>


</div>

